<!--pages/index/index.wxml-->

<container class="container">
  <view class="label">
    How many team members do you have?
  </view>
  <view class="input">
    <input type="number" placeholder='# of team members' />
  </view>

  <view class="label">
    What weekdays do you want to include?
  </view>
  <checkout-group class="input">
    <view>
      <checkbox value="Sunday"/>Sunday
    </view>
    <view>
      <checkbox value="Monday"/>Monday
    </view>
    <view>
      <checkbox value="Tuesday"/>Tuesday
    </view>
    <view>
      <checkbox value="Wednesday"/>Wednesday
    </view>
    <view>
      <checkbox value="Thursday"/>Thursday
    </view>
    <view>
      <checkbox value="Friday"/>Friday
    </view>
    <view>
      <checkbox value="Saturday"/>Saturday
    </view>
  </checkout-group>

  <view class="label">
    Select the start and end time in a day
  </view>
  <view class="time-input">
    <view class="time-input-small">
      <picker mode="time" value="10:10" start="09:01" end="21:01" 
        bindchange="bindTimeChange">
        start
      </picker>
    </view>
    <view class="time-input-small">
      <picker mode="time" value="10:10" start="09:01" end="21:01" 
        bindchange="bindTimeChange">
        end
      </picker>
    </view>
  </view>

  <view class="submit">
    <button type="primary" bindtap="buttonAction">Create</button>
  </view>
</container>